    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Reviewing <small>picture titled </small> <%=photo.photoTitle%>
                    
                </h2>
                <ol class="breadcrumb">
                    <li><a href="/">Home</a>
                    </li>
                    <li class="active">Contact</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- Review  Form -->
        <div class="row">
          <div class="col-md-8"> 
                <form method="post" action ="/photo/<%= photo._id%>/reviews">
                    <div class="control-group form-group">
                        <div class="controls">
                        <label for="author">Your Name</label>
                        <input class="form-control" id="author" name="author" required data-validation-required-message="Please enter your name.">
                        <p class="help-block"></p>
                        </div>
                    </div>                    
                    <div class="control-group form-group">
                                <div class="controls">
                                <label for="stars">Rate (1-5)</label>
                                <input class="form-control" id="stars" type="number" name="stars">
                                <br>
                                </div>
                    </div>
                    <div class="control-group form-group">
                                <div class="controls">
                                <label for="content">Your Comment:</label>
                                <textarea rows="5" cols="100" class="form-control" id="content"  maxlength="999" style="resize:none"name="content"></textarea>
                                </div>
                    </div>
                    <div id="success"></div>
                    <!-- For success/fail messages -->
                    <button type="submit" class="btn btn-primary">Send Review</button>
                </form>
          </div>
        <div class="col-md-4">
            <img class="img-responsive" src="<%= photo.imageUrl%>" alt="">
        </div>
        <!-- /.row -->


</div>










<br>
<div class="container">
 <div class="row">
  <div class="col-md-4 col-md-offset-4">
   <div class="login-panel panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Please Sign Up</h3>
    </div>
   <% if (typeof errorMessage !== "undefined") { %>
   <div class="error"> <%= errorMessage %> </div>
    <% } %>
    <div class="panel-body">
      <form method="post" action="/signup">
       <fieldset>
        <div class="form-group">
          <label for="name-input"> Your Name </label>
          <input d="name-input" class="form-control" placeholder="Name here" name="signupName" type="text" autofocus>
        </div>
        <div class="form-group">
          <label for="username-input"> Account Name </label>
          <input id="username-input" type="text" class="form-control" placeholder="Account or User name here" name="signupUsername" >
        </div>
        <div class="form-group">
          <label for="password-input"> Password </label>
          <input id="password-input" class="form-control" placeholder="Password here" name="signupPassword" type="password">
        </div>
                                
<!-- Change this to a button or input when using this as a form -->
       <button class="btn btn-lg btn-primary btn-block">Sign Up</button>
       </fieldset>
      </form>
      <h4>  Do you already have an account?<a href="/login" class="btn btn-lg btn-success btn-block"> Log In </a></h4>
     </div>
  </div>
  </div>
 </div>
</div>





